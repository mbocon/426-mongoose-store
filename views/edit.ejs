<%- include("./partials/head.ejs") %>
<%- include("./partials/header.ejs") %>

<div class="wrapper-edit">
    <a class="button back" href="/products/<%= foundProduct._id %>">Go Back</a>
    <div class="flex-parent">
        <form action="/products/<%= foundProduct._id %>?_method=PUT" method="POST" class="box">
            <h1>Edit Product</h1>
            <label for="name">Name:</label>
            <input type="text" name="name" id="name" value="<%= foundProduct.name %>">
            <label for="artist">Artist:</label>
            <input type="text" name="artist" id="artist" value="<%= foundProduct.artist %>">
            <label for="description">Description:</label>
            <textarea name="description" id="description" cols="30" rows="10"><%= foundProduct.description %></textarea>
            <label for="price">Price:</label>
            <input type="number" name="price" id="price" value="<%= foundProduct.price %>">
            <label for="qty">QTY:</label>
            <input type="number" name="qty" id="qty" value="<%= foundProduct.qty %>">
            <label for="img">Image:</label>
            <input type="text" name="img" id="img" value="<%= foundProduct.img %>">
            <input class="button" type="submit" value="Save Changes">
        </form>
    </div>
</div>

<%- include("./partials/footer.ejs") %>